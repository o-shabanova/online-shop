{
  "name": "project-template",
  "version": "1.0.0",
  "description": "Capstone Project Template ",
  "repository": {
    "type": "git",
    "url": "https://autocode.git.epam.com/campus_javascript/capstone-project/project-template.git"
  },
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "serve src -l 5173",
    "start:dist": "serve dist -l 5173",
    "build:css": "sass src/scss/main.scss dist/css/main.css --style=expanded --no-source-map",
    "watch:css": "sass --watch src/scss/main.scss:dist/css/main.css --style=expanded",
    "build:html": "node build-html.js",
    "build": "npm run clean && npm run build:css && npm run build:html",
    "clean": "rm -rf dist"
  },
  
  "devDependencies": {
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-include": "^2.0.1",
    "sass": "^1.93.2",
    "serve": "^14.2.5"
  }
}
